@{
    ViewData["Title"] = "Home";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-primary text-white">
                <h1 class="display-4">
                    <i class="fas fa-home"></i> Welcome to AppView
                </h1>
                <p class="lead">MVC Application for managing Products and Categories</p>
                <hr class="my-4">
                <p>This application provides a complete CRUD interface for managing your data through API integration.
                </p>
                <a class="btn btn-light btn-lg" asp-controller="Products" asp-action="Index" role="button">
                    <i class="fas fa-box"></i> Manage Products
                </a>
                <a class="btn btn-light btn-lg" asp-controller="Categories" asp-action="Index" role="button">
                    <i class="fas fa-tags"></i> Manage Categories
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-box fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Products Management</h5>
                    <p class="card-text">Create, read, update, and delete products with image upload support.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-primary">
                        <i class="fas fa-arrow-right"></i> Go to Products
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-tags fa-3x text-success mb-3"></i>
                    <h5 class="card-title">Categories Management</h5>
                    <p class="card-text">Organize your products with categories and search functionality.</p>
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success">
                        <i class="fas fa-arrow-right"></i> Go to Categories
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <i class="fas fa-user-shield fa-3x text-warning mb-3"></i>
                    <h5 class="card-title">Authentication</h5>
                    <p class="card-text">Secure login and registration system with JWT token management.</p>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-warning">
                        <i class="fas fa-sign-in-alt"></i> Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
