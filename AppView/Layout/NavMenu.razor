<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">AppView</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="categories">
                <span class="bi bi-folder"></span> Danh mục
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="combos">
                <span class="bi bi-collection"></span> Combo
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="orders">
                <span class="bi bi-receipt"></span> Đơn hàng
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="products">
                <span class="bi bi-box"></span> Sản phẩm
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="users">
                <span class="bi bi-people"></span> Người dùng
            </NavLink>
        </div>
        <hr />
        <div class="nav-item px-3">
            @if (isLoggedIn)
            {
                <div>
                    <span class="bi bi-person-circle"></span> @userName
                    <button class="btn btn-link btn-sm" @onclick="Logout">Đăng xuất</button>
                </div>
            }
            else
            {
                <NavLink class="nav-link" href="login">
                    <span class="bi bi-box-arrow-in-right"></span> Đăng nhập
                </NavLink>
                <NavLink class="nav-link" href="register">
                    <span class="bi bi-person-plus"></span> Đăng ký
                </NavLink>
            }
        </div>
    </nav>
</div>

@inject AppView.Services.AuthService AuthService

@code {
    private bool isLoggedIn = false;
    private string userName = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        isLoggedIn = await AuthService.IsLoggedInAsync();
        if (isLoggedIn)
        {
            var user = await AuthService.GetUserInfoAsync();
            userName = user?.FullName ?? user?.Username ?? "";
        }
    }

    private async Task Logout()
    {
        await AuthService.RemoveTokenAsync();
        isLoggedIn = false;
        userName = string.Empty;
        StateHasChanged();
    }

    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private void ToggleNavMenu() => collapseNavMenu = !collapseNavMenu;
}
