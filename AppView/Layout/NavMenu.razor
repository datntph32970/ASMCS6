@inject AppView.Services.AuthService AuthService
@inject AppView.Services.AuthState AuthState

@code {
    private bool isLoggedIn = false;
    private string userFullName = string.Empty;
    private string userEmail = string.Empty;
    private string userRole = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        AuthState.OnAuthStateChanged += OnAuthStateChanged;
        await LoadUserInfo();
    }

    private async void OnAuthStateChanged()
    {
        await LoadUserInfo();
        StateHasChanged();
    }

    private async Task LoadUserInfo()
    {
        isLoggedIn = await AuthService.IsLoggedInAsync();
        if (isLoggedIn)
        {
            var user = await AuthService.GetUserInfoAsync();
            userFullName = user?.FullName ?? user?.Username ?? "";
            userEmail = user?.Email ?? "";
            userRole = user?.RoleName ?? "";
        }
        else
        {
            userFullName = string.Empty;
            userEmail = string.Empty;
            userRole = string.Empty;
        }
    }

    private async Task Logout()
    {
        await AuthService.RemoveTokenAsync();
        isLoggedIn = false;
        userFullName = string.Empty;
        userEmail = string.Empty;
        userRole = string.Empty;
        AuthState.NotifyAuthStateChanged();
        StateHasChanged();
    }

    public void Dispose()
    {
        AuthState.OnAuthStateChanged -= OnAuthStateChanged;
    }
}
