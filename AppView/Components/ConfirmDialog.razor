<div class="modal fade @(Visible ? "show d-block" : "")" tabindex="-1" style="background:rgba(0,0,0,0.3);">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xác nhận</h5>
            </div>
            <div class="modal-body">
                <p>@Message</p>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" @onclick="() => OnConfirm.InvokeAsync()">Đồng ý</button>
                <button class="btn btn-secondary" @onclick="() => OnCancel.InvokeAsync()">Hủy</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public bool Visible { get; set; }
    [Parameter] public EventCallback OnConfirm { get; set; }
    [Parameter] public EventCallback OnCancel { get; set; }
}

<style>
    .modal.fade {
        display: none;
    }

    .modal.show {
        display: block;
    }
</style>