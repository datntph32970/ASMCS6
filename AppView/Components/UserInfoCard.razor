@using AppDB.Models.DtoAndViewModels.AuthService.ViewModels
<div class="user-info-card" @onclick="() => OnClick.InvokeAsync()">
    <img src="@AvatarUrl" class="avatar me-2" alt="avatar" />
    <div class="user-details">
        <div class="user-name">@User?.FullName ?? User?.Username</div>
        @if (ShowRole)
        {
            <div class="user-role">@User?.RoleName</div>
        }
    </div>
</div>

@code {
    [Parameter] public UserInfo? User { get; set; }
    [Parameter] public bool ShowRole { get; set; } = true;
    [Parameter] public string? AvatarUrl { get; set; } = "https://ui-avatars.com/api/?name=User";
    [Parameter] public EventCallback OnClick { get; set; }
}

<style>
    .user-info-card {
        display: flex;
        align-items: center;
        cursor: pointer;
        padding: 8px 12px;
        border-radius: 6px;
        transition: background 0.2s;
    }

    .user-info-card:hover {
        background: #f5f5f5;
    }

    .avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        background: #eee;
    }

    .user-details {
        display: flex;
        flex-direction: column;
    }

    .user-name {
        font-weight: 600;
    }

    .user-role {
        font-size: 0.9rem;
        color: #888;
    }
</style>